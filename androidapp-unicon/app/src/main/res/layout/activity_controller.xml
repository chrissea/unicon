    <Button
        android:id="@+id/A"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp"
        android:onClick="onA"
        android:text="@string/a"
        app:layout_constraintBottom_toBottomOf="@+id/joystick"
        app:layout_constraintEnd_toStartOf="@+id/CL"
        app:layout_constraintStart_toEndOf="@+id/joystick"></Button>

    <Button
        android:id="@+id/B"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:layout_marginEnd="103dp"
        android:layout_marginRight="103dp"
        android:layout_marginBottom="35dp"
        android:onClick="onB"
        android:text="@string/b"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/CD"
        app:layout_constraintStart_toStartOf="@+id/A"
        app:layout_constraintTop_toBottomOf="@+id/CR"></Button>

    <Button
        android:id="@+id/START"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="344dp"
        android:layout_marginRight="344dp"
        android:text="@string/start"
        app:layout_constraintBottom_toBottomOf="@+id/Z"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Z"
        app:layout_constraintTop_toTopOf="@+id/Z"></Button>

    <Button
        android:id="@+id/CU"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="@string/cu"
        app:layout_constraintBottom_toBottomOf="@+id/Z"
        app:layout_constraintEnd_toEndOf="@+id/CD"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/CD"
        app:layout_constraintTop_toTopOf="@+id/Z"
        app:layout_constraintVertical_bias="0.0"></Button>

    <Button
        android:id="@+id/CD"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="123dp"
        android:layout_marginRight="123dp"
        android:layout_marginBottom="58dp"
        android:text="@string/cd"
        app:layout_constraintBottom_toBottomOf="@+id/B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/CL"
        app:layout_constraintTop_toTopOf="@+id/CR"></Button>

    <Button
        android:id="@+id/CL"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:onClick="onStart"
        android:text="@string/cl"
        app:layout_constraintBottom_toBottomOf="@+id/CR"
        app:layout_constraintEnd_toStartOf="@+id/CD"
        app:layout_constraintStart_toEndOf="@+id/A"
        app:layout_constraintTop_toTopOf="@+id/CR"
        app:layout_constraintVertical_bias="0.0"></Button>

    <Button
        android:id="@+id/CR"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_marginBottom="51dp"
        android:text="@string/cr"
        app:layout_constraintBottom_toTopOf="@+id/B"
        app:layout_constraintEnd_toEndOf="@+id/RIGHT"
        app:layout_constraintTop_toBottomOf="@+id/RIGHT"></Button>


    <com.jmedeisis.bugstick.Joystick
        android:id="@+id/joystick"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginEnd="115dp"
        android:layout_marginRight="115dp"
        android:layout_marginBottom="35dp"
        android:background="#3F51B5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Z">

        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:color="#ffffff" />

    </com.jmedeisis.bugstick.Joystick>


    <android.support.constraint.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Constraints
        android:id="@+id/constraints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="left"
        tools:layout_editor_absoluteX="731dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

</android.support.constraint.ConstraintLayout>